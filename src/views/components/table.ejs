<div class="box bg-white">
  <div class="box-header">
    <h3 class="box-title">Table</h3>
    <div class="box-tool"> <a href="/<%= prefix %>/create">create</a> </div>
  </div>

  <div class="box-body p-0">
    <table class="table table-striped">
    <thead>
      <tr>
        <% columns.forEach((column) => { %>
          <th><%= column.column_name %> </th>
        <%}) %>
        <th>action</th>
      </tr>
    </thead>
    <tbody>
      <% data.forEach((element) => { %>
        <tr>
          <% columns.forEach((column) => { %>
            <td><%= element[column.column_name] %> </td>
          <%}) %>
          <td>
            <a href="#" data-toggle="modal" data-target="#modal-view-<%= element.id %>">
              <i class="fa-solid fa-eye"></i>
              view
            </a> 
            <a href="/<%= prefix %>/update?id=<%= element.id %>">
              <i class="fa-solid fa-pen-to-square"></i>
              update
            </a>
            <a href="#">
              <i class="fa-solid fa-trash"></i>
              delete
            </a>
          </td>
        </tr>
        <%- include('../components/view.ejs', {element: element}) %>
      <% }) %>
    </tbody>
    </table>
  </div>
  <div class="box-footer">
    <ul class="pagination pagination-sm float-right">
      <li class="page-item"><a class="page-link" href="#">«</a></li>
      <li class="page-item"><a class="page-link" href="#">1</a></li>
      <li class="page-item"><a class="page-link" href="#">2</a></li>
      <li class="page-item"><a class="page-link" href="#">3</a></li>
      <li class="page-item"><a class="page-link" href="#">»</a></li>
    </ul>
  </div>
</div>